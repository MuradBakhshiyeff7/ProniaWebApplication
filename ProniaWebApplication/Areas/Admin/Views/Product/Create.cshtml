@model ProniaWebApplication.Models.Product

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Name</label>
        <input name="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input name="Price" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>Main Image</label>
        <input name="MainImage" class="form-control" />
    </div>

    <div class="form-group">
        <label>Hover Image</label>
        <input name="HoverImage" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>CategoryId</label>
        <input name="CategoryId" class="form-control" type="number" />
        <small class="text-muted">Category ID-ni əl ilə yaz (məs: 1)</small>
    </div>

    <div class="form-group">
        <input name="IsPrime" type="checkbox" />
        <label>Has hover image?</label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
