@model List<ProniaWebApplication.Models.Category>

<h2>Categories</h2>
<a class="btn btn-primary mb-3" href="/Admin/Category/Create">Create New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Admin/Category/Edit/@category.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Admin/Category/Delete/@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
